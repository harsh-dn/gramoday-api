<%- include('partials/header') %>
  <div class="container mt-5">
    <div class="center-element">
      <h1 class="login-header">Get Price</h1>
    </div>

    <div class="row">
      <div class="col-sm-7 login-div">
        <div class="card">
          <div class="card-body">
            <form action="/reports/:reportID" method="POST">
              <div class="form-group">
                <label for="reportID">Report-ID</label>
                <input type="reportID" class="form-control" name="reportID" autocomplete="off">
              </div>
              <button type="submit" class="btn btn-dark">Get</button>
            </form>
          </div>
        </div>

        <div class="alternate-login">
          <hr>
          <h5>OR </h5>
        </div>

        <div class="card">
          <div class="card-body">
            <form action="/marketAndCommodity" method="POST">
              <div class="form-group">
                <label for="marketID">Market-ID</label>
                <input type="text" class="form-control" name="marketID" autocomplete="off">
              </div>
              <div class="form-group">
                <label for="cmdtyID">Commodity-ID</label>
                <input type="text" class="form-control" name="cmdtyID" autocomplete="off">
              </div>
              <button type="submit" class="btn btn-dark">Get</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>